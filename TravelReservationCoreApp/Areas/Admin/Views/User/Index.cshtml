@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı </th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{sayac = sayac + 1;}
            <th> @sayac</th>
            <th>@item.Name @item.Surname </th>
            <th>@item.UserName </th>
            <th>@item.Email </th>
            <th> <a href="/Admin/User/DeleteUser/@item.Id"  class=" btn btn-outline-danger"> Sil </a> </th>
            <th> <a href="/Admin/User/EditUser/@item.Id"  class=" btn btn-outline-success"> Düzenle </a> </th>
            <th> <a href="/Admin/User/CommentUser/@item.Id"  class=" btn btn-outline-info"> Yorumlar </a> </th>
            <th> <a href="/Admin/User/ReservationUser/@item.Id"  class=" btn btn-outline-primary">Tur Geçmişi </a> </th>

        </tr>
        
    }

</table>
