@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  
    int sayac = 0;
}

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir Ad Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
             @{sayac = sayac + 1;}
            <th> @sayac</th>
            <th>###</th>
            <th>@item.Destination.City</th>
            <th>@item.PersonCount</th>
            <th>@item.ReservationDate</th>
            <th> <a href="#"  class=" btn btn-outline-danger"> Detaylar </a> </th>

        </tr>
        
    }

</table>
